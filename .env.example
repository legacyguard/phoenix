# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Application Configuration
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME="LegacyGuard Heritage Vault"
VITE_APP_ENVIRONMENT=development

# Production/Development Mode
# Set to 'true' for production (enables domain redirects)
# Set to 'false' for development/staging (shows redirect simulation)
VITE_IS_PRODUCTION=false

# Feature Flags
VITE_ENABLE_WILL_SYNC=true
VITE_ENABLE_LEGAL_VALIDATION=false
VITE_ENABLE_EMERGENCY_ACCESS=true
VITE_ENABLE_SHARING=true
VITE_ENABLE_NOTIFICATIONS=true

# New Respectful Onboarding (set to 'true' to enable)
VITE_RESPECTFUL_ONBOARDING=false

# Encryption Keys (Generate using scripts/generate-encryption-key.sh)
VITE_ENCRYPTION_KEY=your_256_bit_encryption_key_in_hex

# Email Configuration (for development, use Supabase's built-in email)
VITE_EMAIL_FROM=noreply@legacyguard.com
VITE_EMAIL_PROVIDER=supabase

# Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn
VITE_ENABLE_ERROR_TRACKING=false

# Payment Gateway (Stripe)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
VITE_STRIPE_PREMIUM_MONTHLY_PRICE_ID=your_stripe_premium_monthly_price_id
VITE_STRIPE_PREMIUM_YEARLY_PRICE_ID=your_stripe_premium_yearly_price_id

# Legal Validation API Keys (Optional for MVP)
VITE_LEGAL_API_SK=your_slovak_legal_api_key
VITE_LEGAL_API_CZ=your_czech_legal_api_key

# Storage Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Session Configuration
VITE_SESSION_TIMEOUT_MINUTES=30
VITE_REMEMBER_ME_DAYS=30

# Analytics (Optional)
VITE_GA_TRACKING_ID=your_google_analytics_id
VITE_ENABLE_ANALYTICS=false

# Support Configuration
VITE_SUPPORT_EMAIL=support@legacyguard.com
VITE_SUPPORT_PHONE=+1234567890

# API Rate Limiting
VITE_API_RATE_LIMIT_PER_MINUTE=60
VITE_API_RATE_LIMIT_PER_HOUR=1000

# Cron Jobs Configuration
# Secret for authenticating cron job requests
CRON_SECRET=your_secure_cron_secret_here

# Backend Service Keys (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Encryption key for will backups
WILL_ENCRYPTION_KEY=your_will_encryption_key_here

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here

# Legal validation webhook secret
LEGAL_VALIDATION_WEBHOOK_SECRET=your_legal_validation_webhook_secret_here

# OpenAI Configuration (for AI-powered features)
OPENAI_API_KEY=your_openai_api_key_here

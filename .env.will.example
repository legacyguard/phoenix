# Will System Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your_email_service_api_key
NEXT_PUBLIC_EMAIL_SERVICE_ENDPOINT=https://api.emailservice.com/v1/send

# Legal Validation Service
LEGAL_VALIDATION_WEBHOOK_SECRET=your_webhook_secret
LEGAL_VALIDATION_API_ENDPOINT=https://api.legalvalidation.com/v1
LEGAL_VALIDATION_API_KEY=your_legal_api_key

# PDF Generation Service
PDF_GENERATION_API_KEY=your_pdf_api_key
PDF_GENERATION_ENDPOINT=https://api.pdfservice.com/v1/generate

# Application URLs
NEXT_PUBLIC_APP_URL=https://app.legacyguard.com

# Backup Configuration
WILL_BACKUP_BUCKET=legacyguard-will-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_RETENTION_DAYS=365

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info

# Feature Flags
ENABLE_WILL_SYNC=true
ENABLE_LEGAL_VALIDATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WILL_VERSIONING=true

# Rate Limiting
WILL_GENERATION_RATE_LIMIT=10 # per user per day
SYNC_RATE_LIMIT=100 # per user per day

# Legal API Keys by Country
LEGAL_API_SK=slovak_legal_api_key
LEGAL_API_CZ=czech_legal_api_key

# Skribble E-Signature Configuration
SKRIBBLE_API_BASE=https://api.skribble.com
SKRIBBLE_API_KEY=your_skribble_api_key
SKRIBBLE_ACCOUNT_ID=your_skribble_account_id
SKRIBBLE_WEBHOOK_SECRET=your_webhook_secret

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

{
  "dev": "vite",
  "dev:respectful": "VITE_RESPECTFUL_ONBOARDING=true vite",
  "build": "vite build",
  "build:dev": "vite build --mode development",
  "lint": "eslint .",
  "preview": "vite preview",
  "test": "vitest",
  "test:run": "vitest run",
  "test:watch": "vitest watch",
  "test:coverage": "vitest run --coverage",
  "test:ui": "vitest --ui",
  "test:error-logging": "node scripts/test-error-logging.js",
  "audit-translations": "node audit-translations.js",
  "test:e2e": "playwright test",
  "test:e2e:ui": "playwright test --ui",
  "test:e2e:headed": "playwright test --headed",
  "test:e2e:debug": "playwright test --debug",
  "test:will": "vitest will",
  "migrate": "tsx scripts/run-migrations.ts",
  "migrate:prod": "NODE_ENV=production tsx scripts/run-migrations.ts",
  "backup": "tsx scripts/backup-wills.ts",
  "backup:prod": "NODE_ENV=production tsx scripts/backup-wills.ts",
  "docker:build": "docker build -t legacyguard/phoenix:latest .",
  "docker:run": "docker-compose up -d",
  "docker:stop": "docker-compose down",
  "deploy": "npm run build && npm run docker:build && npm run docker:push"
}
